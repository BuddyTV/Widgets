<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_centerInParent="true">
		<!-- May need to use view class="android.view.GradientTextView to find by id -->
		<!-- Be mindful of padding vs margin. Padding eats into the gradient. -->
		<GradientTextView
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:startColor="#FF000000" android:endColor="#FFFFFFFF"
			android:angle="90" android:textSize="72sp" android:text="HellO!!!!!" />
	</LinearLayout>
</RelativeLayout>